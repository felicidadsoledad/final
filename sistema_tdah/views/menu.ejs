    <style>
        body {
            background-color: #f4f9f9; /* Fondo azul claro */
        }
        .navbar {
            background-color: #1a759f; /* Azul agradable */
        }
        .navbar-brand {
            display: flex;
            align-items: center;
            color: #fff !important;
            font-weight: bold;
        }
        .navbar-brand img {
            width: 30px;
            height: 30px;
            margin-right: 10px;
        }
        .nav-link {
            color: #fff !important;
            font-weight: bold;
        }
        .dropdown-menu {
            background-color: #f4f9f9; /* Fondo suave */
        }
        .dropdown-item:hover {
            background-color: #168aad; /* Azul oscuro */
            color: #fff;
        }
        .carousel {
            margin-top: 20px;
        }
        .carousel-inner img {
            width: 100%;
            height: 700px;
            object-fit: cover;
        }
        section {
            padding: 40px 20px;
            background-color: #ffffff; /* Fondo blanco */
        }
        section h2 {
            font-size: 2.5rem; /* Título grande */
            color: #1a759f; /* Azul atractivo */
            text-align: center; /* Centrado */
            margin-bottom: 30px;
        }
        section p {
            font-size: 1.5rem; /* Texto agradablemente grande */
            color: #4a4a4a;
            line-height: 1.8;
            text-align: center;
        }
        .strategies {
            display: grid;
            grid-template-columns: repeat(3, 1fr); /* 3 columnas */
            gap: 20px;
        }
        .strategy-card {
            border: 1px solid #dddddd;
            border-radius: 10px;
            padding: 20px;
            background-color: #f9f9f9;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Sombra suave */
        }
        .strategy-card h3 {
            font-size: 1.5rem;
            color: #034c61;
            margin-bottom: 15px;
        }
        .strategy-card ul {
            padding-left: 20px;
            color: #4a4a4a;
            font-size: 1rem;
        }
        footer {
            background-color: #034c61; /* Azul oscuro */
            color: #fff;
            padding: 20px 0;
        }
        .footer-columns {
            display: flex;
            justify-content: space-around; /* Divide en 2 columnas */
            flex-wrap: wrap;
        }
        .footer-columns div {
            flex: 1; /* Cada columna ocupa la mitad */
            padding: 10px 20px;
        }
        .social-icons img {
            width: 30px;
            height: 30px;
            margin-right: 10px;
        }
        .social-icons a {
            color: #34a0a4;
            text-decoration: none;
            font-size: 1.2rem; /* Iconos más grandes */
        }
        .social-icons a:hover {
            color: #168aad; /* Azul oscuro */
        }
    </style>
