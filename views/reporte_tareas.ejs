<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Reporte de Tareas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/ec7551d25d.js" crossorigin="anonymous"></script>
    <style>
        body {
            background-color: #e8f6f3; /* Fondo verde claro */
        }
        .container {
            margin-top: 50px;
            padding: 30px;
            background-color: #ffffff; /* Fondo blanco */
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Sombra suave */
        }
        h1 {
            text-align: center;
            color: #1a759f; /* Azul agradable */
        }
        table {
            margin-top: 20px;
            width: 100%;
        }
        th {
            background-color: #1a759f;
            color: white;
        }
        td, th {
            text-align: center;
            padding: 10px;
        }
        .btn-container {
            text-align: center;
            margin-top: 40px; /* Espaciado superior */
        }
        .action-buttons {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
            height: 100%;
        }
        .action-buttons .btn {
            width: 100px;
            padding: 10px;
        }
        .action-buttons a {
            margin-right: 20px;
        }
        /* Botón Modificar (amarillo) */
        .action-buttons a.btn-warning {
            background-color: #ffcc00;
            color: white;
            border: none;
            box-shadow: 0 4px 5px rgba(255, 204, 0, 0.5);
            transition: transform 0.2s ease-in-out;
        }
        .action-buttons a.btn-warning:hover {
            background-color: #e0ac00;
            transform: scale(1.05);
            color: white;
        }
        /* Botón Eliminar (rojo) */
        .btn-danger {
            background-color: #e63946 !important;
            color: white;
            border: none;
            box-shadow: 0 4px 5px rgba(230, 57, 70, 0.5);
        }
        .btn-danger:hover {
            background-color: #c81d32 !important;
            transform: scale(1.05);
            color: white;
        }

        .btn-tarea {
            background-color: #4caf50;
            color: white;
            border: none;
            box-shadow: 0 4px 5px rgba(76, 175, 80, 0.4);
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
        }
        .btn-tarea:hover {
            background-color: #388e3c;
            transform: scale(1.05);
            color: white;
        }
        .btn-inicio {
            background-color: #0288d1;
            color: white;
            border: none;
            box-shadow: 0 4px 5px rgba(2, 136, 209, 0.4);
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            margin-left: 10px;
        }
        .btn-inicio:hover {
            background-color: #026aa7;
            transform: scale(1.05);
            color: white;
        }
    </style>
</head>
<body>

<div class="container">
    <h1>Reporte de Tareas</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Paciente</th>
                <th>Descripción</th>
                <th>Fecha</th>
                <th>Avance</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% tareas.forEach(tarea => { %>
                <tr>
                    <td><%= tarea.id %></td>
                    <td><%= tarea.paciente %></td>
                    <td><%= tarea.descripcion %></td>
                    <td><%= tarea.fecha %></td>
                    <td><%= tarea.avance %></td>
                    <td class="action-buttons">
                        <!-- Botón para modificar -->
                        <a href="/editar_tarea/<%= tarea.id %>" class="btn btn-warning"><i class="fas fa-edit" style="margin-right: 5px;"></i>Modificar</a>
                        <!-- Botón para eliminar -->
                        <a href="/eliminar_tarea/<%= tarea.id %>?volver=/reporte_tareas" class="btn btn-danger"><i class="fas fa-trash-alt" style="margin-right: 5px;"></i>Eliminar</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <!-- Botones adicionales -->
    <div class="btn-container">
        <!-- Botón para ir al formulario de registro -->
        <a href="/registro_tarea" class="btn btn-tarea"><i class="fas fa-user-plus" style="margin-right: 5px;"></i>Registrar otra tarea</a>
        <!-- Botón para regresar a inicio -->
        <a href="/menu" class="btn btn-inicio"><i class="fas fa-home" style="margin-right: 5px;"></i>Inicio</a>
    </div>
</div>
</body>
</html>
