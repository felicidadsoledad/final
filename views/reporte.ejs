<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Reporte de Pacientes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/ec7551d25d.js" crossorigin="anonymous"></script>
    <style>
        body {
            background-color: #e8f6f3; /* Fondo verde claro suave */
        }
        .container {
            margin-top: 50px;
            padding: 30px;
            background-color: #ffffff; /* Fondo blanco */
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Sombra suave */
        }
        h1 {
            text-align: center;
            color: #1a759f; /* Azul agradable */
        }
        table {
            margin-top: 20px;
            width: 100%;
        }
        th {
            background-color: #1a759f;
            color: white;
        }
        td, th {
            text-align: center;
            padding: 10px;
        }
        .btn-container {
            text-align: center;
            margin-top: 40px; /* Espaciado superior */
        }
        .action-buttons {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px; /* Espaciado entre botones */
            height: 100%;
        }
        .action-buttons .btn {
            width: 100px; /* Tamaño uniforme */
            padding: 10px; /* Consistencia en altura */
        }
        .action-buttons a {
            margin-right: 20px;
        }
        /* Botón Modificar (amarillo) */
        .action-buttons a.btn-warning {
            background-color: #ffcc00; /* Amarillo intenso */
            color: white;
            box-shadow: 0 4px 5px rgba(255, 204, 0, 0.5); /* Sombra amarilla */
            border: none;
            transition: transform 0.2s ease-in-out;
        }
        .action-buttons a.btn-warning:hover {
            background-color: #e0ac00; /* Amarillo intenso oscuro */
            transform: scale(1.05);
        }
         /* Estilos para el botón de eliminar */
        a.btn-danger {
            background-color: #e63946 !important; /* Rojo atractivo */
            color: white;
            border: none;
            box-shadow: 0 4px 5px rgba(230, 57, 70, 0.5);
        }
        a.btn-danger:hover {
            background-color: #c81d32 !important; /* Rojo más oscuro */
            transform: scale(1.05); /* Efecto de agrandamiento */
        }
        /* Botón verde: Registrar otro paciente */
        .btn-registrar {
            background-color: #4CAF50; /* Verde atractivo */
            color: white;
            border: none;
            box-shadow: 0 4px 5px rgba(76, 175, 80, 0.4); /* Sombra verde */
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
        }
        .btn-registrar:hover {
            background-color: #388e3c; /* Verde más oscuro */
            transform: scale(1.05);
            color: white;
        }
        /* Botón azul: Inicio */
        .btn-inicio {
            background-color: #0288d1; /* Azul medio */
            color: white;
            border: none;
            box-shadow: 0 4px 5px rgba(2, 136, 209, 0.4); /* Sombra azul */
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            margin-left: 10px;
        }
        .btn-inicio:hover {
            background-color: #026aa7; /* Azul más oscuro */
            transform: scale(1.05);
            color: white;
        }
    </style>
</head>
<body>
<div class="container">
    <h1>Reporte de Pacientes</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Edad</th>
                <th>Sexo</th>
                <th>Tutor</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% pacientes.forEach(paciente => { %>
                <tr>
                    <td><%= paciente.id %></td>
                    <td><%= paciente.nombre %></td>
                    <td><%= paciente.edad %></td>
                    <td><%= paciente.sexo %></td>
                    <td><%= paciente.tutor %></td>
                    <!--<td class="action-buttons" style="display: flex; gap: 10px; align-items: center;">
                         Botón para modificar 
                        <a href="/editar_paciente/<%= paciente.id %>" class="btn btn-warning" style="align-self: center;">Modificar</a>

                         Botón para eliminar 
                        <form action="/eliminar-paciente/<%= paciente.id %>" method="POST" style="margin: 0; align-self: center;">
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                        </form>
                    </td>-->
                    <td class="action-buttons">
                        <div style="display: flex; gap: 10px; align-items: center;">
                            <!-- Botón para modificar -->
                            <a href="/editar_paciente/<%= paciente.id %>" class="btn btn-warning">
                            <i class="fas fa-edit" style="margin-right: 5px;"></i>Modificar</a>
                            <!-- Botón para eliminar
                            <a href="/eliminar_paciente/<%= paciente.id %>" class="btn btn-danger">Eliminar</a>-->
                            <a href="/eliminar_paciente/<%= paciente.id %>?volver=/reporte" class="btn btn-danger">
                            <i class="fas fa-trash-alt" style="margin-right: 5px;"></i>Eliminar</a>
                        </div>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <div class="btn-container">
        <!-- Botón para ir al formulario de registro -->
        <a href="/registro" class="btn btn-registrar"><i class="fas fa-user-plus" style="margin-right: 5px;"></i>Registrar otro paciente</a>
        <!-- Botón para regresar a inicio -->
        <a href="/menu" class="btn btn-inicio"><i class="fas fa-home" style="margin-right: 5px;"></i>Inicio</a>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
 <script src="https://kit.fontawesome.com/8eb9a2ac92.js" crossorigin="anonymous"></script>
</body>
</html>
